@model Category.Domain.Models.UserDomain


<form method="post" asp-action="Index" asp-controller="Login">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Login</h2>
            <br />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.UserName"></label>
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" class="form-control" />
            @*    <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span> *@
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Login</button>
    </div>
</form>